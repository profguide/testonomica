{% extends 'base.html.twig' %}

{% block title %}{{ test.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Результат</h1>
        {{ result|raw }}

        <div class="test__result_actions">
            <div class="container">
                <div class="mb-4">
                    <div style="font-weight: bold">Постоянная ссылка на результат</div>
                    <div><a href="{{ path('tests.result', {'uuid': uuid}) }}" target="_blank">Постоянная ссылка на результат</a></div>
                </div>
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <a href="{{ path('tests.view', {'slug': test.slug}) }}" class="btn btn-light">Пройти тест ещё раз</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
