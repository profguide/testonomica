{% extends('tests/result.html.twig') %}

{% block result %}
    <div class="container">
        <div class="mt-2 mb-2">
            {% if sum >= 1 and sum <= 10 %}Низкая мотивация к успеху{% endif %}
            {% if sum >= 11 and sum <= 16 %}Средний уровень мотивации{% endif %}
            {% if sum >= 17 and sum <= 20 %}Умеренно высокий уровень мотивации{% endif %}
            {% if sum >= 21 and sum <= 32 %}Слишком высокий уровень мотивации{% endif %}
        </div>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: {{ percentage }}%;"
                 aria-valuenow="{{ percentage }}" aria-valuemin="0" aria-valuemax="100">{{ sum }} из 32
            </div>
        </div>
    </div>
{% endblock %}