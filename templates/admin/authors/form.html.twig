{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin') }}">Панель управления</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin.authors') }}">Авторы</a></li>
                <li class="breadcrumb-item active">{{ title }}</li>
            </ol>
        </nav>

        <h1 class="mb-4">{{ title }}</h1>

        {{ form_errors(form) }}

        {{ form_start(form) }}

        <div class="row">
            <div class="col">{{ form_row(form.name, {label: 'Имя RU'}) }}</div>
            <div class="col">{{ form_row(form.nameEn, {label: 'Имя EN'}) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.about, {label: 'Описание RU'}) }}</div>
            <div class="col">{{ form_row(form.aboutEn, {label: 'Описание EN'}) }}</div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
